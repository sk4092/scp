package com.scp.SerealizationDemo;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.OutputStream;

import com.scp.SerealizationDemo.model.SerializableStudent;

/**
 * Swapnil
 *
 */
public class App 
{
    public static void main( String[] args ) throws FileNotFoundException, IOException, ClassNotFoundException
    {
        
    	File f =new File("D:\\swapnil\\Scoopen\\filesUsedInFileHandlingPrograms\\serilaztionNormalFields.txt");
    	
    	ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(f));    	
    	SerializableStudent s= new SerializableStudent(20, 10);
        oos.writeObject(s);
        
        ObjectInputStream ois= new ObjectInputStream(new FileInputStream(f));
        SerializableStudent ss=(SerializableStudent) ois.readObject();
        
        
        
        System.out.println(ss);
    }
    
    private Object readAndWriteObject(String filePath,Object o) throws FileNotFoundException, IOException, ClassNotFoundException{
    	File f =new File(filePath);
    	ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(f));    	
        oos.writeObject(o);
        
        ObjectInputStream ois= new ObjectInputStream(new FileInputStream(f));
        Object ss=ois.readObject();
    	return null;
    }
}
