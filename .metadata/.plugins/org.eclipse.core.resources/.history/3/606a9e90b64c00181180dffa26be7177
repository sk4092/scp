package com.scp.QuestionSet.ReverseNumber;

public class ReverseNumberUsingRecursion {
	public static void main(String[] args) {
		int num=3456;
		reverseNumber(num);
	}
	
	public static void reverseNumber(int num){
			System.out.println(num%10);
			num=num/10;
			reverseNumber(num);
			if(num<10){
				return;
			}
	}
}
